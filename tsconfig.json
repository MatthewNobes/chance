{
	"compilerOptions": {
		"target": "es2019",
		"module": "esnext",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"lib": ["dom", "es2019"],
		"skipLibCheck": true,
		"sourceMap": true,
		"baseUrl": "src",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.svelte"],
	"exclude": ["node_modules"],
	"extends": "./.svelte-kit/tsconfig.json"
}
